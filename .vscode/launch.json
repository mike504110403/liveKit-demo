{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flutter Web (手機版)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "chrome",
        "--web-port",
        "8888",
        "--web-launch-url",
        "http://localhost:8888",
        "--web-browser-flag=--window-size=414,896",
        "--web-browser-flag=--force-device-scale-factor=2"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "flutterMode": "debug"
    },
    {
      "name": "Flutter Web (Chrome)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "chrome",
        "--web-port",
        "8888",
        "--web-launch-url",
        "http://localhost:8888"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "flutterMode": "debug"
    },
    {
      "name": "Flutter Web (優化模式)",
      "type": "dart",
      "request": "launch",
      "program": "lib/main.dart",
      "args": [
        "-d",
        "chrome",
        "--web-port",
        "8888",
        "--web-launch-url",
        "http://localhost:8888",
        "--dart-define=FLUTTER_WEB_USE_SKIA=false"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "flutterMode": "debug"
    }
  ]
}
